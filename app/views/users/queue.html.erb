<section id='main-page'>


<%# if current_user %>

  <div class='wrapper'>
    <h2 id='queue'>Your Queue</h2>

  <%# current_user.series.each %>
  <ul>
      <%# current_user.series.each do |series| %>
        <li class="series-in-queue">
          <p class='series-title'><%# series.title %></p>
          <ul>
          <%#series.issues.order(:issue_number).limit(10).each do |issue| %>
            <li class='issues-in-list'>
              <a href="<%# issue.url %>">
  <img src="<%# issue.thumbnail %>" alt="Comic!" width="150" height="200" border="0">
  </a>
              <p>Issue #<%# issue.issue_number %></p>
              <p><%# issue.on_sale_date %></p>

            </li>
          <%#end %>
        </ul>
        </li>

      <%#end %>
  </ul>
  </div>

  <%#else %>
    <!-- <p><a id="log-in-link" href="/login">Log In</a> to view your reading list!</p>
    <p>(or <a id="sign-up-link" href="/register">sign up now</  a> to start building your queue!</p> -->
<%#end %>
</section>

